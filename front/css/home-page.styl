@import 'ui/menu'
@import 'ui/config'
@import 'ui/modal'
@import 'ui/button'
@import 'ui/footer'
@import 'ui/client-carousel-list'

.home-banner
    max-width 100vw
    overflow hidden

    .logo
        width 150px
        position absolute
        top 1em
        left 1em
        z-index 1

        img
            width 100%


    .background-video
        width 100vw
        position relative

        .shadow 
            position absolute
            top 0
            left 0
            width 100%
            height 100%
            background-color rgba(0, 0, 0, .3)
            display flex
            justify-content center
            align-items center

            .center-text__container
                max-width 100vw
                text-align center

            .special-blue-text
                font-size .5em
                text-transform uppercase
                letter-spacing 18px
                font-family 'Open Sans', sans-serif
                font-weight 600
                color #1F69AF

            .carousel
                .text-section
                    text-transform uppercase
                    min-width 320px
                    // background-color white
                    font-size 1em
                    color white
                    font-weight bold
                    font-family 'Montserrat', sans-serif

                .slide
                    background-color transparent

        video 
            width 100%
            height auto


.grid-album-information
    background-color #111727
    margin-bottom 4em

    .grid-1g-2x2 
        max-width 1140px
        margin 0 auto

    .box-blue-bg
        min-height 250px
        background-color #1c2438

    .box-light-blue-bg
        min-height 250px
        background-color #1F69AF


.center-flex-box
    display flex
    justify-content center 
    align-items center

.box-info
    font-family 'Montserrat', sans-serif
    color white
    padding 1em

    &__title
        text-align center
        font-weight bold
        margin-bottom 1em
        font-size 1.3em
        text-transform uppercase

    &__description
        text-align center


.section-title
    font-size 40px
    color #000
    margin-bottom 50px
    font-weight bold
    text-align center
    font-family 'Open Sans', sans-serif


.our-team
    padding 1em

    img
       width 100%

    &__container   
        justify-content space-between    
        max-width 1024px
        margin 0 auto

        .information
            &__description
                font-family 'Open Sans', sans-serif
                line-height 2.2em
                font-size .9em
                color #888
                margin-bottom 50px
                letter-spacing 1px
                padding 1em
                text-align justify

    &__button__container
        max-width 1024px
        margin 2em auto
        text-align center


.services
    img
        width 100%
        margin-bottom 1em

    &__container
        padding 1em
        max-width 1024px
        margin 0 auto

        &__title
            text-align center
            padding 10px 0
            color #000
            margin-bottom 30px
            font-size 40px
            font-weight bold
            font-family 'Montserrat', sans-serif


    .shadow-block
        width 100%
        height 100%
        overflow hidden
        position absolute
        top 0
        background-color rgba(0, 0, 0, .3)
        opacity 0
        transition opacity .6s ease-in-out

        &__container
            position absolute
            top -100%
            display flex
            width 100%
            height 100%
            justify-content center
            align-items center
            transition all .2s ease-in-out

            h4
                color #fff
                padding 12px 10px
                border 1px solid rgba(204, 204, 204, 0.3)
                display block
                font-weight bold
                font-size 1.5em
                margin 0 auto
                background rgba(255, 255, 255, 0.21)
                text-transform uppercase
                letter-spacing 2px
                font-family 'Montserrat', sans-serif


    .img-hovered
        position relative

    
        &:hover
            cursor pointer

            .shadow-block
                opacity 1
                transition opacity .3s ease-in-out

                &__container
                    top 0
                    transition all .2s ease-in-out


.full-dual-section-desktop
    width 100%
    grid-template-columns repeat(2, 1fr)
    background-color #111727

    &__img__container
        max-height 400px

        img
            object-fit cover
            width 100%
            height 100%

    .galery-information
        padding 3em 1em
        display flex
        align-items center
        justify-content center
        font-family 'Montserrat', sans-serif

        &__container
            max-width 500px

            &__title
                color white
                font-size 2em
                font-weight bold
                margin-bottom 0.8em

            &__description
                font-size 1em
                letter-spacing 1px
                color #b3bfde
                line-height 2.2
                margin-bottom 2em

                
.clients
    padding 3em 0

    *
        box-sizing border-box

    background-image url('../img/footer.jpg')
    background-position center 
    background-repeat no-repeat
    background-size cover
    background-attachment fixed
    margin-bottom 2em

    min-height 450px
    display flex
    align-items center
    justify-content center

    &__content
        padding 1em
        max-width 900px
        width 100%
        color white
        background-color rgba(24, 114, 175, .8)
        border-radius 5px
        box-shadow: 0px 0px 10px rgba(72, 62, 62, .6)

        .section-title
            color white
            text-shadow 1px 1px black

    .clien-section__container
        max-width 100vw
        // background-color #1872af
        // background-color rgba(24, 114, 175, .8)
        // padding 5em 1em

    .carousel
        .client-section
            min-height 100px
            max-width value
            background-color transparent 
            font-size 1em
            margin 0 2em
            font-family 'Open Sans', sans-serif

            .title
                font-size 1.8em
                color #fff
                line-height 1.5em
                font-weight bold
                text-transform uppercase
                letter-spacing 1px
                margin-bottom 2em

            .information
                line-height 2

        .slide
            background-color transparent


.form-notification
    padding 1em 2em
    width 100%
    
    .information
        background-color #0c111f
        color white
        text-align center
        font-weight bold
        padding 1em 2em


.gallery
    padding 25px
    display grid
    grid-template-columns repeat(3, 1fr)
    grid-gap 25px
    max-width 1620px
    margin 0 auto
    overflow-y scroll
    height 80vh
    width 90vw

    &__section
        img 
            margin-bottom 20px

            &:hover
                cursor pointer


.service-modal-card
    max-width 500px


.contact
    width 100%
    min-height 400px
    background-color white
    margin-bottom 2em

    iframe
        width 100vw
        height 100vw

    &__container
        max-width 1024px
        margin 0 auto
        display flex
        justify-content center
        align-items center


        #interest-form
            display flex
            align-items center


        .form            
            width 100%
            box-sizing border-box
            padding 1em
            font-family 'Open Sans', sans-serif

            .form-input-container
                input
                    color #1872af   

            input
                &::placeholder
                    color #999

        .title
            font-size 2em
            letter-spacing 2px
            font-weight normal
            color #333
            margin-bottom 10px
            font-weight bold

        .subtitle
            font-size 15px
            font-weight normal
            padding-bottom 20px
            line-height 30px
            color #1872af
            letter-spacing 3px


        .input
            font-size 15px
            font-weight normal
            color #999
            border-radius 0
            border-color #fff
            outline none
            box-shadow none
            border 1px solid #ddd
            letter-spacing 1px
            min-width 100%
            padding 6px 12px
            box-sizing border-box
            height 45px
            margin-bottom 2em

        .label
            font-size 17px
            letter-spacing 1px
            font-weight 600
            color #111727
            padding-bottom 10px


        .button-submit
            width 100%
            padding 1em
            border-radius 20px
            background-color #0099e5
            color white
            font-weight bold
            text-align center
            border none

            &:hover
                cursor pointer

            &:focus
                outline none


.team-galery
    max-width 1024px
    margin 1em auto
    padding 1em
    
    &-desktop-list
        .item-img
            border 2px solid transparent 
            
            &--active
                border-color #0659c8


    &__content
        .item-head
            display flex
            border 1px solid #c1c1c1
            margin-bottom .5em

        .item-body
            display none

            &--active
                display block
            
            &__info
                text-align justify
                line-height 1.1
                font-family 'Montserrat', sans-serif

                .title
                    letter-spacing 1px
                    font-size 1.5em
                    color #222
                    font-weight bold
                    text-align center
                    font-family 'Montserrat', sans-serif

                .subtitle
                    text-align center
                    margin .5em 0
                    font-family 'Open Sans', sans-serif
                    font-size 12px
                    text-transform uppercase
                    letter-spacing 11px
                    color #1F69AF

                .profession-text
                    color #0659c8
                    font-weight bold
                    font-size .9em
                    margin 1.5em 0 .5em

                .study-text
                    color #333
                    font-style italic
                    font-weight 100
                    
                
                .experience-text
                    font-weight bold
                    font-size .9em     
                    color #222    
                    margin 2em 0


                .info
                    margin-bottom 1em
                    font-size 1em
                    letter-spacing .5px
                    color #888
                    line-height 2.2
                    font-family 'Montserrat', sans-serif

            &__img
                text-align center
                margin-bottom 1em


    &-desktop-list
        display none
    

.area-work-list
    min-width 320px
    padding 1em 0
    text-align -webkit-auto
    margin-left 1em
    color #888
    font-size .8em


@media screen and (min-width 1024px)
    .team-galery
        &-desktop-list
            display flex
            text-align center
            margin-bottom 1em

            img 
                margin .2em
                padding .2em
                width 77px

                &:hover
                    cursor pointer

        &__content
            .item-head
                border none
                margin 0

                img 
                    display none

            .item-body
                &--active
                    display flex

                &__info
                    padding 4em 0 0 3em
                    text-align left

                    .title,
                    .subtitle,
                    .info 
                        text-align left


    .contact
        iframe
            width 100%
            height 100%

        &__container
            #interest-form
                min-height 455px

            .form
                padding 1em 1em 0em 1em


    .clients
        padding 5em 0

        .clien-section__container
            max-width 800px
            margin 0 auto

    .full-dual-section-desktop
        display grid
        max-height 400px

        .galery-information
            padding 1em

            &__container
                &__description
                    margin-bottom 3em

    .our-team
        &__container 
            display flex

            .information

                &__title
                    text-align left
                    font-family 'Montserrat', sans-serif
                    color #000
                    margin-bottom 30px
                    font-size 39px
                    font-weight bold      


                &__description
                    padding 0 2em 0 0


        &__img__container
            width 410px
            min-width 410px

            img
                width 100%

        &__button__container
            text-align left
            margin 0 auto


    .home-banner
        .logo
            width 450px

        .background-video
            .shadow 
                .special-blue-text
                    font-size 1.5em
                    font-weight bold

                .carousel
                    .text-section
                        font-size 2em


    .services
        img
            margin-bottom 0
            object-fit cover
            height 100%


    .grid-1g-2x2
        display grid
        grid-template-columns repeat(3, 1fr)
        grid-template-areas 'x1 x2 x3' 'x1 x4 x5'

        .grid-item-x1
            grid-area x1

        .grid-item-x2
            grid-area x2

        .grid-item-x3
            grid-area x3

        .grid-item-x4
            grid-area x4

        .grid-item-x5
            grid-area x5


    .grid-2
        display grid
        grid-template-columns repeat(2, 1fr)
        width 100%


    .grid-3
        display grid
        grid-template-columns repeat(3, 1fr)
        width 100%

    .grid-4
        display grid
        grid-template-columns repeat(4, 1fr)
        width 100%


    .gap-2
        grid-gap 2em


    .grid-margin
        margin-bottom 2em