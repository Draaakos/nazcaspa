.background-video
    width 100vw
    position relative

    .shadow 
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        background-color rgba(0, 0, 0, .6)
        display flex
        justify-content center
        align-items center

        .center-text__container
            max-width 100vw
            text-align center

        .special-blue-text
            font-size .5em
            text-transform uppercase
            letter-spacing 18px
            font-family 'Open Sans', sans-serif
            font-weight 600
            color #1F69AF

    video
        width 100%
        height auto