.img-carousel
    position relative
    width 100%
    height 100%
    overflow hidden

    &__list
        width 100%
        height 100%
        position relative


    &__item
        position absolute
        left 0
        top 0
        min-width 100%
        height 100%
        opacity 0
        transition all .5s ease-in-out

        &--active
            opacity 1
            transition all .5s ease-in-out

        img
            display flex
            object-fit cover
            width 100%
            height 100%
